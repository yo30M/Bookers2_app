<div>
  <p>User：<%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>Title:<%= @book.title %></p>
  <p>Opinion:<%= @book.body %></p>
  <p>ユーザーネーム：<%= @book.user.name %></p>
  <% if @book.user == current_user %>
    <p><%= link_to "Edit", edit_book_path(@book) %></p>
  <% end %>
  <% if @book.user == current_user %>
    <%= link_to "Delete", book_path(@book), method: :delete %>
  <% end %>
</div>
<%= render 'users/user-info', user: @user %>
<%= render 'new', book: @newbook %>