<div>
  <%= flash[:notice] %>
</div>


<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user-info', user: @user %>
      <%= render 'new', book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to user_path(@user.id) do %><%= image_tag @book.user.get_profile_image(100,100) %><br><%= @user.name %><% end %></td>
            <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
            <td><%= @book.body %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>