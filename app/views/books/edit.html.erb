<div>
  <%= flash[:notice] %>
</div>
<%= form_with model: @book do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <% if @book.errors.any? %>
          <%= @book.errors.count %> errors prohibited this book from being saved:
            <ul>
              <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>
        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
        </div>
        <div class="form-group">
          <label for="book_body">Opinion</label><br>
          <%= f.text_area :body, autofocus: true, id:"inputOpinion", placeholder:"Opinion"%>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book" %>
        </div>
        <%= link_to book_path(@book.id) do %>Show<% end %>
        <%= link_to books_path do %>Back<% end %>
      </div>
    </div>
  </div>
<% end %>
