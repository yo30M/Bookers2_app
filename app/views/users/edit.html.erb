<div>
  <%= flash[:notice] %>
</div>

<%= form_with model: @user do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>プロフィール編集</h2>
        <% if @user.errors.any? %>
          <%= @user.errors.count %> errors prohibited this book from being saved:
            <ul>
              <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <div class="form-group">
          <label for="inputImage">ProfileImage</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%>
        </div>
        <div class="form-group">
          <%= f.submit "Update User" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
