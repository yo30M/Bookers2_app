<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% render 'layouts/notifications.html.haml' %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container">
            <li><%= link_to root_path do %>
            <font color="ffffff" size=5>Bookers</font>
            <% end %>
            </li>
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-link text-light">
              <li><%= link_to user_path(current_user.id) do %>
              <i class="fas fa-home text-light"></i>
              <font color="#ffffff">Homes</font>
              <% end %>
              </li>
            </li>
            <li class="nav-link text-light">
              <li><%= link_to users_path do %>
              <i class="fas fa-users text-light"></i>
              <font color="#ffffff">Users</font>
              <% end %>
              </li>
            </li>
            <li class="nav-link text-light">
              <li><%= link_to books_path do %>
              <i class="fas fa-book-open text-light"></i>
              <font color="#ffffff">Books</font>
              <% end %>
              </li>
            </li>
            <li class="nav-link text-light">
              <li><%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt text-light"></i>
              <font color="#ffffff">Log out</font>
              <% end %>
              </li>
            </li>
          <% else %>
              <li class="nav-link text-light">
              <li><%= link_to root_path do %>
              <i class="fas fa-home text-light"></i>
              <font color="#ffffff">Homes</font>
              <% end %>
              </li>
              </li>
              <li class="nav-link text-light">
              <li><%= link_to about_path do %>
              <i class="fas fa-link text-light"></i>
              <font color="#ffffff">About</font>
              <% end %>
              </li>
              </li>
              <li class="nav-link text-light">
              <li><%= link_to new_user_registration_path do %>
              <i class="fas fa-user-plus text-light"></i>
              <font color="#ffffff">Sign up</font>
              <% end %>
              </li>
              </li>
              <li class="nav-link text-light">
              <li><%= link_to new_user_session_path do %>
              <i class="fas fa-sign-in-alt text-light"></i>
              <font color="#ffffff">Log in</font>
              <% end %>
              </li>
              </li>
          <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>

      </div>
    </footer>
  </body>
</html>